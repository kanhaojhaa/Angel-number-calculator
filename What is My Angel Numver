    <script>
        document.getElementById('angelForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const birthdate = document.getElementById('birthdate').value;
            if (!birthdate) {
                alert('Please enter your birth date');
                return;
            }
            
            // Calculate angel number from birthdate (YYYY-MM-DD)
            const dateParts = birthdate.split('-');
            const day = parseInt(dateParts[2]);
            const month = parseInt(dateParts[1]);
            const year = parseInt(dateParts[0]);
            
            let sum = day + month + year;
            let angelNumber = reduceToSingleDigit(sum);
            
            // Check for master numbers
            if (sum === 11 || sum === 22 || sum === 33) {
                angelNumber = sum;
            }
            
            // Display result
            document.getElementById('angelNumber').textContent = angelNumber;
            document.getElementById('meaningText').innerHTML = getAngelNumberMeaning(angelNumber);
            document.getElementById('resultContainer').classList.remove('hidden');
            
            // Scroll to result
            document.getElementById('resultContainer').scrollIntoView({ behavior: 'smooth' });
        });
        
        function reduceToSingleDigit(number) {
            while (number > 9 && number !== 11 && number !== 22 && number !== 33) {
                let sum = 0;
                while (number > 0) {
                    sum += number % 10;
                    number = Math.floor(number / 10);
                }
                number = sum;
            }
            return number;
        }
        
        function getAngelNumberMeaning(number) {
            const meanings = {
                1: "New beginnings, independence, and leadership. The angels are encouraging you to stay positive as you manifest your desires.",
                2: "Balance, harmony, and partnerships. This number signifies faith and trust in your divine life purpose.",
                3: "Creativity, self-expression, and growth. The ascended masters are helping you to focus on the divine spark within you.",
                4: "Stability, organization, and hard work. Your angels are supporting you in building strong foundations.",
                5: "Change, freedom, and adventure. Significant life changes are coming your way.",
                6: "Love, family, and responsibility. Focus on gratitude and service to others.",
                7: "Spiritual awakening, intuition, and inner-wisdom. You're on the right path.",
                8: "Abundance, power, and karma. Financial and material gains are coming.",
                9: "Completion, humanitarianism, and lightworking. A phase in your life is ending.",
                11: "Spiritual enlightenment, intuition, and inspiration. A master number of illumination.",
                22: "Master builder, big dreams, and practicality. The most powerful number for manifesting.",
                33: "Master teacher, compassion, and blessings. A highly spiritual number of guidance."
            };
            
            return meanings[number] || "This angel number carries a special message meant just for you. Pay attention to where and when you see this number appearing in your life.";
        }
    </script>
